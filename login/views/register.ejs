<div id="login">
 
  <h3 class="text-center text-dark pt-5 m-3">Register form</h3>
 
  <div class="container card card-body  bg-success">
    <div id="login-row" class="row justify-content-center align-items-center">

      <div id="login-column" class="col-md-6">

        <div id="login-box" class="col-md-12">
          <%- include('partials/messages'); %>
            <form id="login-form" class="form" action="/users/register" method="POST">

              <div class="form-group">
                <label for="name">Name</label>
                <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>" />
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                  value="<%= typeof email != 'undefined' ? email : '' %>" />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>" />
              </div>
              <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input type="password" id="password2" name="password2" class="form-control"
                  placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
              </div>
              <button type="submit" class="btn btn-dark btn-block">
                Register
              </button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/users/login" class="text-dark ">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>